<section class="section">
    <h3>Tag Cloud</h3>
    <div class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}"><a href="{{ path('DrmBlogBundle_blogs', { 'tag': tag }) }}">{{ tag }}</a></span>
        {% else %}
            <p>There are no tags</p>
        {% endfor %}
    </div>
    {% if latestComments %}
		<h3>Latest Comments</h3>
		{% for comment in latestComments %}
		<article class="comment">
			<header>
				<p class="small">
					<span class="highlight">{{ comment.user }}</span> commented on 
					<a href="{{ path('DrmBlogBundle_blog_show', { 'id': comment.blog.id, 'slug': comment.blog.slug }) }}#comment-{{ comment.id }}">
	    				{{ comment.blog.title }}
					</a>
					<em><time datetime="{{ comment.created|date('c') }}">{{
							comment.created|created_ago }}</time></em>
				</p>
			</header>
			<p>{{ comment.comment }}</p>
			</p>
		</article>
		{% endfor %}
	{% endif %}
</section>

