{% extends 'DrmBlogBundle::layout.html.twig' %} {% block body %}
<h3>
	User <a href="{{ path('user') }}" class="btn btn-primary pull-right"> Back to the list </a>
</h3>

<table class="table table-bordered">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Username</th>
			<td>{{ entity.username }}</td>
		</tr>
		<tr>
			<th>Password</th>
			<td>{{ entity.password }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ entity.email }}</td>
		</tr>
		<tr>
			<th>Isactive</th>
			<td>{{ entity.isActive }}</td>
		</tr>
	</tbody>
</table>

{{ form(delete_form) }}

{% endblock %}
