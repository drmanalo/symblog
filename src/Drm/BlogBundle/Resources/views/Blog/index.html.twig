{% extends 'DrmBlogBundle::layout.html.twig' %}

{% block title %}List Blog{% endblock %}

{% block body %}
    <h3>List Blog
    	<a href="{{ path('blog_new') }}" class="btn btn-primary pull-right">Create New Blog</a>
    </h3>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d') }}{% endif %}</td>
                <td>
                	<a href="{{ path('blog_show', { 'id': entity.id }) }}" class="btn btn-small btn-primary">show</a>
                    <a href="{{ path('blog_edit', { 'id': entity.id }) }}" class="btn btn-small btn-primary">edit/delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <!-- override sidebar -->
	{% block sidebar %}{% endblock %}

{% endblock %}